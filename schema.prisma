datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

type GuildEmbed {
  color          String  @default("7289da")
  show_author    Boolean @default(true)
  show_timestamp Boolean @default(true)
}

model Guild {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  guild_id String      @unique
  embed    GuildEmbed?
  locale   String      @default("en-US")

  @@map("guilds")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  guild_id String
  user_id  String
  locale   String @default("en-US")

  @@map("users")
}

model TempVoice {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  guild_id           String
  channel_id         String  @unique
  category_id        String
  delete_if_empty    Boolean
  delete_if_no_owner Boolean
  member_limit       Int
  bitrate            Int

  @@map("tempvoices")
}
